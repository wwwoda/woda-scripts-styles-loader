{
  "name": "woda/wp-scripts-styles-loader",
  "type": "wordpress-plugin",
  "description": "",
  "keywords": [
    "wordpress",
    "plugin",
    "assets",
    "scripts",
    "styles"
  ],
  "license": "GPLv3",
  "homepage": "https://github.com/wwwoda/woda-scripts-styles-loader",
  "authors": [
    {
      "name": "Woda",
      "email": "hello@woda.at",
      "homepage": "https://www.woda.at"
    },
    {
      "name": "David Mondok",
      "email": "david@woda.at"
    },
    {
      "name": "Wolfgang SchÃ¤fer",
      "email": "wolfgang@woda.at"
    }
  ],
  "support": {
    "issues": "https://github.com/wwwoda/woda-scripts-styles-loader/issues",
    "source": "https://github.com/wwwoda/woda-scripts-styles-loader"
  },
  "autoload": {
    "psr-4": {
      "Woda\\WordPress\\ScriptsStylesLoader\\": "includes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Woda\\Test\\WordPress\\ScriptsStylesLoader\\": "test"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "10up/wp_mock": "^0.4.2",
    "eventjet/coding-standard": "^3.1",
    "maglnet/composer-require-checker": "^2.1",
    "phpstan/extension-installer": "^1.0",
    "phpstan/phpstan": "^0.12.25",
    "phpstan/phpstan-mockery": "^0.12.5",
    "roots/wordpress": "^5.4",
    "szepeviktor/phpstan-wordpress": "^0.6.0"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "wordpress-install-dir": "vendor/wordpress/wordpress",
    "installer-paths": {
      "vendor/{$vendor}/{$name}/": [
        "type:wordpress-plugin"
      ]
    }
  },
  "scripts": {
    "check": [
      "@check-deps",
      "@cs-check",
      "@phpstan",
      "@phpunit"
    ],
    "check-deps": "vendor/bin/composer-require-checker check --config-file=require-checker.config.json",
    "cs-check": "vendor/bin/phpcs",
    "cs-fix": "vendor/bin/phpcbf",
    "phpstan": "vendor/bin/phpstan analyse",
    "phpunit": "vendor/bin/phpunit"
  }
}
